{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('registration') }}
{% endblock %}

{% block body %}
<section class="register-form">
    <h2>S'inscrire</h2>
    <hr class="line" />
    {{ form_start(registrationForm) }}
        <div class="form-label">
            {{ form_label(registrationForm.name, 'Nom utilisateur :') }}
            {{ form_widget(registrationForm.name, {'attr': {'placeholder': 'johndoe'}}) }}
            {{ form_errors(registrationForm.name) }}
        </div>
        <div class="form-label">
            {{ form_label(registrationForm.email, 'Adresse mail :') }}
            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'johndoe@gmail.com'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="form-label">
            {{ form_label(registrationForm.delivery_address, 'Adresse de livraison :') }}
            {{ form_widget(registrationForm.delivery_address, {'attr': {'placeholder': '8 rue du bac 54100 Nancy'}}) }}
            {{ form_errors(registrationForm.delivery_address) }}
        </div>
        <div class="form-label">
            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe :') }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': '********'}}) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>
        <div class="form-label">
            {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe :') }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'placeholder': '********'}}) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>
        <button type="submit" class="btn-register">Créer un compte</button>
            {{ form_end(registrationForm, {'render_rest': false}) }}

        <hr class="line" />
    <p class="mt-3">
        Déjà inscrit ?
        <button class="btn-register" 
        onclick="window.location.href='{{ path('app_login') }}'">
        Se connecter
        </button>
    </p>
</section>
{% endblock %}