{% extends 'base.html.twig' %}

{% block title %}Panier - Stubborn{% endblock %}

{% block body %}
    <h1>Panier</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {% if cart is empty %}
        <p>Votre panier est vide pour l'instant.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Sweat-shirt</th>
                    <th>Taille</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for index, item in cart %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.size }}</td>
                        <td>{{ item.price }} €</td>
                        <td>
                            <a href="{{ path('app_cart_remove', {'index': index}) }}" class="btn btn-danger btn-sm">Retirer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <p><strong>Prix total : {{ totalPrice }} €</strong></p>

        <a href="{{ path('app_cart_payment') }}" class="btn btn-primary" data-turbo="false">Finaliser ma commande</a>
    {% endif %}

    <p><a href="{{ path('app_products') }}">Continuer mes achats</a></p>
{% endblock %}